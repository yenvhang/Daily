<resources>

    <!-- Base application theme. -->
    <style name="AppDayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_green_800</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
        <item name="android:windowBackground">@color/md_white_1000</item>



        <!--<item name="android:actionMenuTextColor">@color/md_grey_900</item>-->
        <item name="item_comment_icon">@drawable/comment_day</item>
        <item name="card_backgroundcolor">@color/md_grey_200</item>
        <item name="card_textcolor">@color/md_grey_900</item>
        <item name="card_small_textcolor">@color/md_grey_700</item>
        <item name="item_backgroundcolor">@color/md_white_1000</item>


    </style>
    <style name="AppThemeNight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_grey_900</item>
        <item name="colorPrimaryDark">#252525</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="colorAccent">@color/md_green_800</item>
        <item name="android:windowBackground">@color/md_grey_900</item>

        <item name="item_comment_icon">@drawable/comment_night</item>
        <item name="android:actionMenuTextColor">@color/md_grey_900</item>
        <item name="card_backgroundcolor">@color/md_grey_900</item>
        <item name="card_textcolor">@color/md_white_1000</item>
        <item name="card_small_textcolor">@color/md_grey_500</item>
        <item name="item_backgroundcolor">@color/md_grey_800</item>

    </style>

    <style name="Day" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_white_1000</item>
        <!--<item name="windowBackground">@color/md_grey_800</item>-->
        <item name="android:textColorPrimary">@color/md_grey_900</item>
        <item name="android:colorControlNormal">@color/md_grey_900</item>

        <item name="card_backgroundcolor">@color/md_white_1000</item>
        <item name="card_textcolor">@color/md_grey_900</item>
        <item name="card_small_textcolor">@color/md_grey_900</item>

    </style>

    <style name="Night" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="card_backgroundcolor">@color/md_grey_800</item>
        <item name="card_textcolor">@color/md_white_1000</item>
        <item name="card_small_textcolor">@color/md_white_1000</item>

        <!--<item name="windowBackground">@color/md_grey_800</item>-->
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:colorControlNormal">@color/md_white_1000</item>
        <item name="colorPrimary">@color/md_grey_800</item>


    </style>


    <style name="AppThemeDay" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_blue_600</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
    </style>

    <style name="appbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="android:actionMenuTextColor">@color/md_grey_900</item>
    </style>

    <style name="setting_tittle">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/md_green_700</item>
    </style>
    
    <style name="popupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/md_white_1000</item>
        <item name="android:textColor">@color/md_black_1000</item>
        
    </style>


</resources>
